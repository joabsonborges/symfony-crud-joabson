{% extends 'base.html.twig' %}

{% block title %}Enderecos{% endblock %}

{% block breadcrumb %}Enderecos{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header d-flex">
            Enderecos
            <div class="ml-auto">
                <a href="{{ path('tb_enderecos_new') }}">
                    <button type="button" class="btn btn-outline-success">
                        <span class="text-nowrap"><i class="fa fa-plus" aria-hidden="true"></i> Adicionar Enderecos</span>
                    </button>
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Enderecos</th>
                        <th>Quadra</th>
                        <th>Observação</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tb_endereco in tb_enderecos %}
                        <tr>
                            <td>{{ tb_endereco.quadraEnderecos }}</td>
                            <td>{{ tb_endereco.numeroEnderecos|price(2, ',', '.') }}</td>
                            <td>{{ tb_endereco.observacao }}</td>
                            <td>
                                <div class="d-flex">
                                    <a href="{{ path('tb_enderecos_edit', {'cod_endereco': tb_endereco.getCodEnderecos}) }}"><i class="edit-icon fa fa-pencil" aria-hidden="true" title="Editar"></i></a>
                                    {{ include('tb_enderecos/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                    <tr>
                        <td colspan="5">Nenhum registro encontrado</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
