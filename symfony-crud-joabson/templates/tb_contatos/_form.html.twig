{{ form_start(form) }}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.cpf, 'CPF') }}
                        {{ form_widget(form.cpf, {'attr': {'class': 'form-control','data-mask':'000.000.000-00'}, 'required':false}) }}
                        <small class="text-danger">{{ form_errors(form.cpf) }}</small>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.nome, 'Nome Completo') }}
                        {{ form_widget(form.nome, {'attr': {'class': 'form-control'}, 'required':false}) }}
                        <small class="text-danger">{{ form_errors(form.nome) }}</small>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.email, 'Emaial') }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}, 'required':false}) }}
                        <small class="text-danger">{{ form_errors(form.email) }}</small>
                    </div>
                </div>
                
                <div class="col-12">
                    <div class="form-group">
                        <label>{{ form_label(form.telefone, 'Telefone') }}</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                            
                            </div>
                            {{ form_widget(form.telefone, {'attr': {'class': 'form-control','data-mask':'0000-0000','data-mask-reverse':'true'}, 'required':false}) }}
                        </div>
                        <small class="text-danger">{{ form_errors(form.telefone) }}</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
{{ form_end(form) }}
